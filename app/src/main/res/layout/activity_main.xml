<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gunung"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imgBtn_browser"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:src="@drawable/chrome"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtn_twitter"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_setting"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_twitter" />

    <ImageButton
        android:id="@+id/imgBtn_wa"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/round_button"
        android:src="@drawable/whatsapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_twitter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <ImageButton
        android:id="@+id/imgBtn_twitter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:src="@drawable/twitter"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtn_wa"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_browser"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_wa" />

    <ImageButton
        android:id="@+id/imgBtn_setting"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtn_browser"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_browser" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="584dp" />


</androidx.constraintlayout.widget.ConstraintLayout>